<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/primary_color" android:endColor="@color/primary_color_dark"/>
            <corners android:topRightRadius="10dp" android:topLeftRadius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/primary_color_dark" android:endColor="@color/primary_color"/>
            <corners android:topRightRadius="10dp" android:topLeftRadius="10dp"/>
        </shape>
    </item>
</selector>