<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/item_color" android:centerColor="@color/primary_color_dark" android:endColor="@color/item_color"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/primary_color_dark" android:centerColor="@color/item_color" android:endColor="@color/primary_color_dark"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>