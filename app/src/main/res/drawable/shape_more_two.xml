<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="@color/background"
                android:centerColor="@color/primary_color_dark"
                android:endColor="@color/primary_color"/>
            <corners android:radius="10dp"/>
<!--            <stroke android:color="@color/color_aid" android:width="1dp"/>-->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/primary_color"
                android:centerColor="@color/primary_color_dark"
                android:endColor="@color/background"/>
            <corners android:radius="10dp"/>
<!--            <stroke android:color="@color/color_aid" android:width="1dp"/>-->
        </shape>
    </item>
</selector>