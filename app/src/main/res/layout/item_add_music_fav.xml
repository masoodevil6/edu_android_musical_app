<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:background="@drawable/shape_item_add_music"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/item_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/element_id_recycler_item_add_music_fav_image_music"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/music_main"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@id/element_id_recycler_item_add_music_fav_txt_music_name"
            android:layout_below="@id/element_id_recycler_item_add_music_fav_image_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music  Name"
            android:textColor="@color/background"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            />


        <TextView
            android:id="@id/element_id_recycler_item_add_music_fav_txt_artist_name"
            android:layout_below="@id/element_id_recycler_item_add_music_fav_txt_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist  Name"
            android:textColor="@color/background"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />



        <ImageView
            android:id="@id/element_id_recycler_item_add_music_fav_image_btn_fav"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_favorite_border_24"
            app:tint="@color/primary_color"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>



</androidx.cardview.widget.CardView>