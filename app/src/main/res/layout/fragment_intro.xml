<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:background="@drawable/shape_background">


    <androidx.viewpager.widget.ViewPager
        android:id="@id/element_id_intro_fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    
    <com.google.android.material.tabs.TabLayout
        android:id="@id/element_id_intro_fragment_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="center"
        app:tabBackground="@drawable/shape_tab_layout"
        app:tabIndicator="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@id/element_id_intro_fragment_btn_submit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="ثبت نام"
        android:textColor="@color/black"
        android:background="@drawable/shape_download"
        android:textSize="18sp"
        />


</RelativeLayout>