<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_music_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:id="@+id/image_music_item"
        android:layout_marginStart="15dp"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/item_color"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_item_music"
        android:layout_marginStart="60dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:text="name music"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:id="@+id/txt_name_music_item"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/primary_color_dark"
            android:layout_below="@+id/txt_name_music_item"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="55dp">

            <TextView
                android:id="@+id/txt_time_music_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="Time Music"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_ovel_one">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/btn_fav_music_item"
                android:src="@drawable/baseline_favorite_border_24"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_ovel_one">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/btn_download_music_item"
                android:tint="@color/color_aid"
                android:src="@drawable/baseline_download_24"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>