<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/element_id_splash_fragment_lottie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:lottie_rawRes="@raw/music"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/element_id_splash_fragment_lottie"
        android:layout_marginTop="140dp"
        android:text="به نرم افزار موزیکال خوش آمدید"
        android:textColor="@color/color_aid"
        android:textSize="18sp"
        android:gravity="center"
        />

</RelativeLayout>