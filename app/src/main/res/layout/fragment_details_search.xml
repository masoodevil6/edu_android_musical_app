<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/shape_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_toolbar"
        android:layout_margin="10dp"
        android:elevation="20dp">

        <TextView
            android:id="@id/element_id_favorite_details_search_text_tool_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جست و جو"
            android:textColor="@color/item_color"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>


        <ImageView
            android:id="@id/element_id_favorite_details_search_image_btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:rotation="180"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_search">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="7"
            android:orientation="horizontal">

            <EditText
                android:id="@id/element_id_favorite_details_search_edit_text_search"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="6"
                android:padding="10dp"
                android:background="@null"
                android:hint="جست و جو ..."
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_search_24"
                app:tint="@color/color_aid"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color_aid"
            />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/element_id_favorite_details_search_rec_list_searched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

</LinearLayout>