<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:background="@drawable/shape_all_music"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_toStartOf="@id/element_id_recycler_all_music_relative_layout_btns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_all_music_item"
       android:layout_marginVertical="10dp"
        android:layout_marginEnd="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/element_id_recycler_all_music_image_music"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="120dp"
            android:layout_marginTop="17.5dp"
            android:weightSum="2"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/primary_color">

                <TextView
                    android:id="@id/element_id_recycler_all_music_txt_artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="artist name"
                    android:layout_gravity="center"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="  نام خواننده"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="17.5dp"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" نام موزیک  "
                android:textSize="16sp"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/primary_color">

                <TextView
                    android:id="@id/element_id_recycler_all_music_txt_music_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="artist name"
                    android:layout_gravity="center"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@id/element_id_recycler_all_music_relative_layout_btns"
        android:background="@drawable/shape_all_music_item_fav"
        android:layout_marginVertical="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="15dp"
        >

        <ImageView
            android:id="@id/element_id_recycler_all_music_image_btn_fav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_favorite_border_24"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


</RelativeLayout>