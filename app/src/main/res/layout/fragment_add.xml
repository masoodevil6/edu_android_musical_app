<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:background="@color/primary_color">


    <RelativeLayout
        android:id="@id/element_id_fragment_add_relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_toolbar_add"
        android:layout_margin="10dp"
        android:elevation="20dp">

        <TextView
            android:id="@id/element_id_fragment_add_txt_title_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موزیک های من"
            android:textColor="@color/primary_color_dark"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>


        <ImageView
            android:id="@id/element_id_fragment_add_image_btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:rotation="180"
            app:tint="@color/primary_color"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/element_id_fragment_add_recycler_view_list"
        android:layout_below="@id/element_id_fragment_add_relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        />


    <RelativeLayout
        android:id="@id/element_id_fragment_add_relative_btn_add"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_toolbar_add"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اضافه کردن آهنگ"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_btn_add_fragment_oval"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="-20dp"
        android:layout_toEndOf="@id/element_id_fragment_add_relative_btn_add"
        >
    </RelativeLayout>

</RelativeLayout>