<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginHorizontal="10dp"
    android:layoutDirection="rtl"
    android:layout_marginBottom="10dp"
    android:id="@+id/rel_music_more">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_more2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/image_music_more"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_more"
        android:layout_marginStart="110dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name artist"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/txt_name_artist_more"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name music"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/txt_name_music_more"
            android:layout_below="@+id/txt_name_artist_more"
            android:layout_marginTop="15dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/primary_color"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time music"
                android:textColor="@color/color_aid"
                android:textSize="16sp"
                android:id="@+id/txt_time_music_more"
                android:layout_margin="5dp"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rel_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_ovel_one">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_play_arrow_24"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_ovel_one"
            android:layout_below="@id/rel_play">

            <ImageView
                android:id="@+id/btn_fav_more_music"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_favorite_border_24" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>