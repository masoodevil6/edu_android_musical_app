<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/shape_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_toolbar"
        android:layout_margin="10dp"
        android:elevation="20dp">

        <TextView
            android:id="@+id/txt_toolbar_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موزیکال"
            android:textColor="@color/item_color"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>


        <ImageView
            android:id="@id/element_id_favorite_search_card_image_btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:rotation="180"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@id/element_id_favorite_search_card_type_singer_iran"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/primary_color"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/singer_music"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:text="خواننده ایرانی"
                        android:textSize="16sp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@id/element_id_favorite_search_card_type_singer_foreign"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_marginStart="10dp"
                    app:cardBackgroundColor="@color/primary_color"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/singer_music"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:text="خواننده خارجی"
                        android:textSize="16sp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@id/element_id_favorite_search_card_type_music_add"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                app:cardBackgroundColor="@color/primary_color"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/add_music"
                    app:tint="@color/color_aid"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:text="آهنگ ها اضافه شده"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@id/element_id_favorite_search_card_type_music"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="10dp"

                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/primary_color"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/image_music_2"
                        app:tint="@color/color_aid"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:text="آهنگ ها"
                        android:textSize="16sp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@id/element_id_favorite_search_card_type_video"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/primary_color"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/video_music"
                        app:tint="@color/color_aid"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:text="ویدئو"
                        android:textSize="16sp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>







        </LinearLayout>

    </ScrollView>



</LinearLayout>